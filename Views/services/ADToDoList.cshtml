    <section class="ftco-section">
        <form>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section" style="font-family:Georgia, 'Times New Roman', Times, serif">To_Do_List</h2>
                </div>
            </div>
            <center>
                <div class="mx-50%">
                    <a href="/services/addtodolist" class="btn btn-link text-align-center d-flex" style="font-size:200%  ">
                        <i class="fa fa-plus-circle text-center mx-50%" aria-hidden="true" style="text-align:center"></i>
                    </a>
                </div>
            </center>

            <div class="row">
                <div class="col-md-12">
                    <div class="table-wrap">
                        <table class="table table-striped" style="text-align:center">
                            <thead>
                                <tr style="background:#3e64ff">
                                    
                                    <th style="color:#ffff">TaskID</th>
                                    <th style="color:#ffff">TaskName</th>
                                    <th style="color:#ffff">empID</th>
                                    <th style="color:#ffff">Deadline</th>
                                    <th style="color:#ffff">options</th>
                                </tr>
                            </thead>
                            <tbody>
                                    @{
                                        foreach (var item in Model)
                                        {
                                            
                                            <tr>
                                            <th scope="row">@item.taskID</th>
                                            <td style="margin:0;padding:0">@item.taskName</td>
                                           @* <td>@item.employeeID</td>*@
                                           <td>
                                                <a href="/services/detailsforEmoployee/@item.employeeID" id="name" data-value="@item.employeeID" style="color:#000000"><strong>@item.employeeID</strong>
                                               
                                                </a>
                                                </td>
                                            <td>@item.deadline</td>
                                            <td style="text-align:center">
                                                @*<a type="submit" name="Add" value="Add" class="btn btn-info" asp-action="addclient"  />*@

                                                <a href="/services/DeleteTodolist/@item.taskID" style="font-size:200%; color:red;margin-right:20px;margin-left:10px">
                                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                </a>

                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
         
        
        </form>
